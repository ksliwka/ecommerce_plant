<% layout('layouts/boilerplate')%>
<div class="contaier m-3">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <h1><%= user.username %></h1>
      <p><%= user.location %></p>
      
      <a
        class="btn btn-dark btn-block login_button"
        id="viewBtn"
        href="/user/<%= user._id %>/reviews  "
        >View reviews
      </a>
    </div>
  </div>
</div>

<ul>
  <div class="container mt-4">
    <div class="row">
      <% for(let plant of plants){ %>

      <div class="col-sm-4">
        <div
          class="card_custom card h-300 mb-3 d-inline d-block hover-shadow m-3"
        >
          <a href="/plants/<%= plant._id %>" class="text-decoration-none">
            <img
              class="card-img-top img-fluid"
              alt=""
              src="<%= plant.image %> "
            />

            <div class="card-body text-dark">
              <h5 class="card-title"><%=plant.title%></h5>
              <p class="card-text">
                <small class="text-muted"> <%= plant.location %> </small>
              </p>
              <p class="card-text">
                <small class="fw-bolder">$ <%= plant.price %> </small>
              </p>
            </div>
          </a>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</ul>
