<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="container">
    <h1>cart</h1>
    <p><%= user.username %></p>
    <div class="row justify-content-start gy-5 gx-0">
      <% for(let item of cart) {%>

      <div class="col-2">
        <img
          src="<%= item.image %> "
          alt=""
          class="img-fluid rounded"
          style="height: 10rem"
        />
      </div>
      <div class="col-9 border-bottom">
        <h3><%= item.title %></h3>
        <p><%= item.price %> </p>
      </div>
      <form
      action="/user/<%=user._id%>/cart/<%=item._id%>?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-sm btn-outline-dark login_button">Delete</button>
    </form>
      <% } %>
    </div>
  </div>
</div>
