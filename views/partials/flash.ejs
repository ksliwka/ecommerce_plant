<% if(success && success.length) {%>
<div
  class="alert alert-dismissible fade show mx-5"
  role="alert"
  style="background: rgba(247, 247, 247, 0.88)"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) {%>
<div
  class="alert alert-dismissible fade show mx-5"
  style="background: rgba(247, 247, 247, 0.88)"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
