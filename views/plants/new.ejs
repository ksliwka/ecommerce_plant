<% layout('layouts/boilerplate') %>

<div class="container mt-5 position-relative">
<div class="row justify-content-center">
  <div class="container_register  col-md-4 p-5 ">
  <h1 class="fw-bolder  login_heading mb-4">ADD PLANT</h1>
  <!-- <div class="col-6 offset-3"> -->
    <form action="/plants" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="title"></label>
        <input
          class="form-control no-border"
          placeholder="Title"
          type="text"
          id="title"
          name="plant[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location"></label>
        <input
          class="form-control no-border"
          placeholder="Location"
          type="text"
          id="location"
          name="plant[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image"></label>
        <input
          class="form-control no-border"
          placeholder="Image Url"
          type="text"
          id="image"
          name="plant[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price"></label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control no-border"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="plant[price]"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description"></label>
        <textarea
          class="form-control no-border"
          placeholder="Description"
          type="text"
          id="description"
          name="plant[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-dark mt-5 login_button">Add plant</button>
      </div>
    </form>
    <a href="/plants" class="mt-4">All plants</a>
  <!-- </div> -->
</div>
</div>
</div>







